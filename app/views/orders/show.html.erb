<h2><%= t "orders.title" %><%= @order.id %></h2>
<div class="row">
  <div class="col-md-8">
    <% if @order_details.any? %>
      <table class="table ecommerce-table">
        <thead>
          <tr>
            <th>
              <h4><%= pluralize @order.order_details_count, "product" %></h4>
            </th>
            <th></th>
            <th><%= t "table.item_price" %></th>
            <th><%= t "table.quantity" %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <%= render partial: "detail",
              locals: {order_detail: order_detail} %>
          <% end %>
        </tbody>
      </table>
      <%= will_paginate @order_details %>
    <% else %>
      <div class="col-md-8 col-md-offset-2">
        <div class="alert alert-danger no-user-info">
          <p class="text-center"><%= t "info.no_order" %></p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4 order-summary">
    <h4><%= t "orders.summary" %></h4>
    <hr>
    <p><%= t "orders.total" %>
      <span>
        <%= t "orders.total_payment_amount" %>
      </span>
      <span class="pull-right total">
        <%= number_to_currency @order.total %>
      </span>
    </p>
  </div>
</div>
