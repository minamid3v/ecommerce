<div class="card col-sm-6 col-md-3">
  <%= link_to image_tag(product.image.url, alt: t("alt.product_image"),
    class: "full-width-image"), [:admin, product] %>
    <h4><b><%= product.name %></b></h4>
    <div class="product-rate"
      data-score="<%= product.average_rate %>">
    </div>
    <span>( <%= pluralize product.rate_count, "reviews" %> )</span>
    <p class="product-price"><%= t "product.price" %>
      <%= number_to_currency product.price %>
    </p>
    <%= link_to t("button.delete"), admin_product_path(product),
      class: "inline-btn btn btn-success", method: :delete,
      data: { confirm: t("confirm.are_you_sure") }, remote: true %>
    <%= link_to t("button.edit"), edit_admin_product_path(product),
      class: "inline-btn btn btn-success" %>
</div>
